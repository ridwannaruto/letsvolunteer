{% extends "::base.html.twig" %}

{% block content %}
    <div id="content" class="span10">

    {% if app.user.roles[0] == 'ORGANIZATION' %}
        <div class="row-fluid">
            <div class="pull-right">
                <a href="{{ path('ridwan_opportunity_new') }}">
                    <button class="btn btn-round btn-success"><i class="icon-plus"></i> Create Opportunity</button>
                </a>
            </div>
        </div><br>
    {% endif %}

    <div class="row-fluid">

        <div class="box span12">

            <div class="box-header well" data-original-title>

                <h2><i class="icon-list-alt"></i> Volunteering Opportunities by {{ organization }}</h2>

            </div>
            <div class="box-content">
                <br>

                <table class="table table-striped table-bordered bootstrap-datatable datatable">

                    <thead>
                    <tr>
                        <th width="15%">Title</th>
                        <th width="45%">Details</th>
                        <th width="10%">Type</th>
                        <th width="10%">Location</th>
                        <th width="10%">Status</th>

                    </tr>
                    </thead>

                    <tbody>
                    {% for op in Opportunities %}
                        <tr>
                            <td>
                                <a href="{{ path('ridwan_opportunity_details',{'opportunityID':op.id}) }}">{{ op.title }} </a>
                            </td>
                            <td class="center">
                                {{ op.description }}
                            </td>
                            <td class="center">
                                {{ op.cause }}
                            </td>
                            <td class="center">
                                {{ op.location }}
                            </td>
                            <td class="center">
                                {% if op.status == -1 %}
                                    <h3> <span class="label label-important"> Rejected </span></h3>
                                {% elseif op.status == 0 %}
                                    <h3><span class="label label-warning"> Pending Approval</span></h3>

                                {% elseif op.status == 1 %}
                                    <h3> <span class="label label-inverse"> Assigning Volunteers</span></h3>

                                {% elseif op.status == 2 %}
                                    <h3><span class="label label-inverse">On going</span></h3>

                                {% elseif op.status == 3 %}
                                    <h3><span class="label label-info">Completed</span></h3>
                                {% endif %}
                            </td>

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

        </div>


    </div>

{% endblock %}