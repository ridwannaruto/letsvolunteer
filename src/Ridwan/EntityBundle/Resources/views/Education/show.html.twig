{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Education</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Institution</th>
                <td>{{ entity.institution }}</td>
            </tr>
            <tr>
                <th>Field</th>
                <td>{{ entity.field }}</td>
            </tr>
            <tr>
                <th>Degree</th>
                <td>{{ entity.degree }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ entity.duration }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('education') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('education_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
