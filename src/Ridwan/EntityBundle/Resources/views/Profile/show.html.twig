{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Profile</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Intro</th>
                <td>{{ entity.intro }}</td>
            </tr>
            <tr>
                <th>Reason</th>
                <td>{{ entity.reason }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ entity.experience }}</td>
            </tr>
            <tr>
                <th>Health</th>
                <td>{{ entity.health }}</td>
            </tr>
            <tr>
                <th>Drivinglicense</th>
                <td>{{ entity.drivinglicense }}</td>
            </tr>
            <tr>
                <th>Arrested</th>
                <td>{{ entity.arrested }}</td>
            </tr>
            <tr>
                <th>Aggregatedrating</th>
                <td>{{ entity.aggregatedrating }}</td>
            </tr>
            <tr>
                <th>Totalweight</th>
                <td>{{ entity.totalweight }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('profile') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('profile_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
