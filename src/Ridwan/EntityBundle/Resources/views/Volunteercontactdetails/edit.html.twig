{% extends '::base.html.twig' %}

{% block content%}
<div id="content" class="span10">
    <div class="row-fluid">

        <br>
        <h2>Profile Information</h2>
        <hr><br>
        {{ form_start(edit_form) }}


        <div class="control-group primary">
            {{form_label(edit_form.mobile, 'Mobile Number',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.mobile)}}
                <span class="help-inline">{{ form_errors(edit_form.mobile) }}</span>
            </div>
        </div>

        <div class="control-group primary">
            {{form_label(edit_form.phone, 'Phone Number',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.phone)}}
                <span class="help-inline">{{ form_errors(edit_form.phone) }}</span>
            </div>
        </div>


        <div class="control-group primary">
            {{form_label(edit_form.fax, 'Fax Number',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.fax)}}
                <span class="help-inline">{{ form_errors(edit_form.fax) }}</span>
            </div>
        </div>

        <div class="control-group primary">
            {{form_label(edit_form.streetnumber, 'Street Number',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.streetnumber)}}
                <span class="help-inline">{{ form_errors(edit_form.streetnumber) }}</span>
            </div>
        </div>


        <div class="control-group primary">
            {{form_label(edit_form.street, 'Street',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{ form_widget(edit_form.street)}}
                <span class="help-inline">{{ form_errors(edit_form.street) }}</span>
            </div>
        </div>



        <div class="control-group primary">
            {{form_label(edit_form.city, 'City',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.city)}}
                <span class="help-inline">{{ form_errors(edit_form.city) }}</span>
            </div>
        </div>


        <div class="control-group primary">
            {{form_label(edit_form.divisionalsecretary, 'Divisional Secretary',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.divisionalsecretary)}}
                <span class="help-inline">{{ form_errors(edit_form.divisionalsecretary) }}</span>
            </div>
        </div>


        <div class="control-group primary">
            {{form_label(edit_form.country, 'Country',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.country)}}
                <span class="help-inline">{{ form_errors(edit_form.country) }}</span>
            </div>
        </div>


        {{ form_widget(edit_form._token) }}
        <div class="control-group primary">
            {{form_label(edit_form.country, ' ',{ 'label_attr': {'class': 'control-label'} })}}

            <div class="controls">
                {{form_widget(edit_form.submit,{'attr':{'class':'btn btn-success'}})}}
                <span class="help-inline">{{ form_errors(edit_form.country) }}</span>
            </div>
        </div>

        {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
