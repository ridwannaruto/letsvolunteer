{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Availability list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Days</th>
                <th>Duration</th>
                <th>Preferredtime</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('availability_show', { 'id': entity.id }) }}">{{ entity.days }}</a></td>
                <td>{{ entity.duration }}</td>
                <td>{{ entity.preferredtime }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('availability_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('availability_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('availability_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
