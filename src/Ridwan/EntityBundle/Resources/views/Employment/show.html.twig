{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Employment</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Occupation</th>
                <td>{{ entity.occupation }}</td>
            </tr>
            <tr>
                <th>Organizationtype</th>
                <td>{{ entity.organizationtype }}</td>
            </tr>
            <tr>
                <th>Organization</th>
                <td>{{ entity.organization }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('employment') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('employment_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
