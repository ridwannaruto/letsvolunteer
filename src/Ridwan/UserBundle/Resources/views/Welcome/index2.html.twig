<body>

<!---------------Content --------------------------------->
<!-- messages -->

{% if type is defined %}
{% if type == 'E' %}
    <script type="text/javascript">
        window.onload = function() {
            noty(jQuery.parseJSON('{"text":"{{message}}","layout":"top","type":"error"}'));

        }
    </script>
{% endif %}

{% if type == 'S' %}
    <script type="text/javascript">
        window.onload = function() {
            noty(jQuery.parseJSON('{"text":"{{message}}","layout":"top","type":"success"}'));

        }
    </script>
{% endif %}
{% endif %}

<!-- topbar starts -->

<!-- left menu ends -->

<div class="container-fluid">
    <div class="row-fluid">


        <noscript>
            <div class="alert alert-block span10">
                <h4 class="alert-heading">Warning!</h4>
                <p>You need to have <a href="http://en.wikipedia.org/wiki/JavaScript" target="_blank">JavaScript</a> enabled to use this site.</p>
            </div>
        </noscript>


        {% block content %}
        {% endblock %}

        <div class="modal hide fade" id="comment">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">Ã—</button>
                <h3>Confirm</h3>
            </div>
            <div class="modal-body">
                <p align="center">Are you sure you want to delete this Notification?
                </p>


            </div>
            <div class="modal-footer">

                <form action="empty" id = "continue-form" method="POST">
                    <input name="id" id="del-id" type="hidden" value="empty" />
                    <a href="#" class="btn" data-dismiss="modal">Close</a>
                    <input type="submit" class="btn btn-primary" value="continue">
                </form>

            </div>
        </div>

    </div>
</div>

{% block delete %}
{% endblock %}

<hr>
<footer>
    <p class="center"><strong>Computer Science & Engineering Department, University of Moratuwa </strong>&copy; 2014
</footer>

</div>

